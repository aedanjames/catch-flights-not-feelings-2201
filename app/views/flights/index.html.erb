<% @flights.each_with_index do |flight, index| %> 
  <section id= "flights-<%= flight.id %>">
    <%= flight.id %>
    <%= flight.airline.name %>
    <% flight.passengers.each do |passenger| %>
      <%= passenger.name %>
      <%= button_to "Remove #{passenger.name}", flight_passenger_path(passenger.id),  method: :delete%>
    <% end %>
  </section>
<% end %>